{
  "permissions": {
    "allow": [
      "*",
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Bash",
      "BashOutput",
      "KillShell",
      "WebSearch",
      "WebFetch",
      "Task",
      "Glob",
      "Grep",
      "LS",
      "NotebookRead",
      "NotebookEdit",
      "TodoRead",
      "TodoWrite",
      "AskUserQuestion",
      "SlashCommand",
      "Skill"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(*.env)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets/**)",
      "Read(*.pem)",
      "Read(**/*.pem)",
      "Read(*.key)",
      "Read(**/*.key)",
      "Read(**/.ssh/id_rsa)",
      "Read(**/.ssh/id_ed25519)",
      "Read(/Users/*/ssh/id_rsa)",
      "Read(/Users/*/ssh/id_ed25519)"
    ],
    "ask": [
      "Bash(git push --force*)",
      "Bash(git push -f*)",
      "Bash(*--force*git push*)",
      "Bash(git reset --hard*)",
      "Bash(git clean -fd*)",
      "Bash(git clean -f -d*)",
      "Bash(git rebase*)",
      "Bash(rm -rf*)",
      "Bash(rm -r *)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "printf '\\033[2m%s@%s \\033[0;36m%s\\033[0m' \"$(whoami)\" \"$(hostname -s)\" \"$(basename \"$(cat | jq -r '.workspace.current_dir')\")\" 2>/dev/null || printf '%s@%s %s' \"$(whoami)\" \"$(hostname -s)\" \"$(pwd | sed 's|.*/||')\""
  },
  "alwaysThinkingEnabled": false,
  "showNextStepsEnabled": false,
  "suggestionsEnabled": false,
  "interactivePromptsEnabled": false,
